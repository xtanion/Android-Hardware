<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluetoothWidget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/unsaturated_green</item>
        <item name="colorPrimaryVariant">@color/background_element</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_blue</item>
        <item name="colorSecondaryVariant">@color/not_black</item>
        <item name="colorOnSecondary">@color/alice_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/arsenic</item>
        <item name="fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:navigationBarColor">?attr/cardBackgroundColor</item>
    </style>
</resources>